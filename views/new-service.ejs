<section class="section section-light">
  <div class="container auth-container">
    <div class="card auth-card">
      <h1>Publish a new service</h1>
      <p class="muted">Describe the skill you offer and how many Saarthi Tokens you charge.</p>

      <form class="auth-form">
        <label>
          <span>Service title</span>
          <input type="text" placeholder="e.g. I will design a minimal logo" required />
        </label>
        <label>
          <span>Category</span>
          <select required>
            <option>Programming &amp; Tech</option>
            <option>Design &amp; Creative</option>
            <option>Marketing</option>
            <option>Writing &amp; Translation</option>
            <option>Learning &amp; Coaching</option>
          </select>
        </label>
        <label>
          <span>Skill tier</span>
          <select required>
            <option>Basic</option>
            <option>Intermediate</option>
            <option>Advanced</option>
          </select>
        </label>
        <label>
          <span>Token price</span>
          <input type="number" min="5" step="5" placeholder="e.g. 35" />
        </label>
        <button type="button" class="btn btn-primary btn-full">This is a demo form</button>
      </form>
    </div>
  </div>
</section>
